{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Output folder for compiled JavaScript
    "declaration": true, // Generate .d.ts files for types
    "declarationDir": "./dist" // Output folder for .d.ts files
  },
  "include": [
    "src/**/*" // Assuming your TypeScript files are in the `src` folder
  ],
  "exclude": ["node_modules"]
}
